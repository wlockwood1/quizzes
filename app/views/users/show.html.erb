<!--Show games created, with name of game, when played (day), and score -->

<div class="row">
  <div class="col-md-3">
    <h2><%= @user.username %></h2>
    <h5>Joined Kwiz on <%= @user.created_at.strftime("%B %d, %Y") %></h5>
  </div>
  <div class="col-md-8">
    <h3 class="text-center"><%= @user.username %>'s Game History</h3>
    <table class="table table-hover table-condensed">
      <thead>
      <tr>
        <th>Date Played</th>
        <th>Quiz Name</th>
        <th>Score</th>
      </tr>
      </thead>
      <%= render @games %>
    </table>
    <h3 class="text-center"><%= @user.username %>'s Quizzes Created</h3>

    <%= render 'shared/quiz_header' %>

    <%= render @quizzes %>
    </table>
  </div>
</div>
