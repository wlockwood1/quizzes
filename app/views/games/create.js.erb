modify_corr = function(val) {
    var corr, new_corr;
    corr = document.getElementById('corr').value;
    new_corr = parseInt(corr, 10) + val;
    if (new_corr < 0) {
        new_corr = 0;
    }
    corr = new_corr;
    return new_corr;
});