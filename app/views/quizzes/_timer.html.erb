<script type="text/javascript">
    // Turn on Bootstrap
    $('[data-toggle="tooltip"]').tooltip();

    function getQuizTimer() {
        return new Date(new Date().valueOf() + <%= @quiz.time_limit %> * 60 * 1000);
    }

    var $clock = $('#clock');
//    $clock.countdown(getQuizTimer(), function(event) {
//        $(this).html(event.strftime('%M:%S'));
//    });
    $('#btn-reset').click(function() {
        $clock.countdown(getQuizTimer());
    });

    $('#btn-pause').click(function() {
        $clock.countdown('pause');
//        Pop-up or redirects to new page when paused so user can't see page
//        This isn't pausing it completely. Hidden time is still counting down even when paused. It does that on the sample site too
    });

    $('#btn-resume').click(function() {
        $clock.countdown('resume');
    });

</script>

