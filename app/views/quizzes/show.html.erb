<h1><%= @quiz.name %></h1>

<p id="notice"><%= notice %></p>

<% if @quiz.description %>
    <h3><%= @quiz.description %></h3>
<% end %>


<div id="pre_quiz">
  <button id="start_quiz">Start Quiz!</button>
</div><br><br>

<!--Look at increment_counter for rails (Game.increment_counter(:correct_answers, @game))-->
<!--'Guess and answers shouldn't render until the 'Start game' button is clicked. Javascript-->
<!--<Sporcle code: input type="text" id="gameinput" size="35" class="answerEntry" onkeyup="checkGameInput(this);" autocapitalize="off" spellcheck="true" autocomplete="off" autocorrect="off">-->

<div id="live_game">
    <%= render 'guess' %>

    <table class="table answers">
      <tr class="headings">
        <th>Hint</th>
        <th>Solution</th>
      </tr>

      <%= render @answers %>

    </table><br><br>

    <%= link_to 'Add Answers', new_quiz_answer_path(@quiz.id) %> |
    <%= link_to 'Edit', edit_quiz_path(@quiz) %> |
    <%= link_to 'Back', quizzes_path %><br><br>

    <a id="give_up" href="#">Give up?</a>
</div>
