<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="css/jquery.countdown.css">
<script type="text/javascript" src="js/jquery.plugin.js"></script>
<script type="text/javascript" src="js/jquery.countdown.js"></script>

<h1><%= @quiz.name %></h1>

<p id="notice"><%= notice %></p>

<% if @quiz.description %>
    <h3><%= @quiz.description %></h3>
<% end %>


<!--<div id="start-quiz">-->
  <!--<h2><%= link_to "Start Quiz" %></h2>-->
<!--</div><br><br>-->

<%= render 'guess' %>

<table class="table">
  <tr class=headings>
    <th>Hint</th>
    <th>Solution</th>
  </tr>
  <% @answers.each do |answer| %>
      <tr class=answers>
        <td><%= answer.hint %></td>
        <!-- show answer.solution if answer_guess => answer.solution-->
        <td></td>
        <td><%= link_to 'Edit Details', [:edit, @quiz, answer] %></td>
        <td><%= link_to 'Remove Answer', [@quiz, answer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
  </tr>
</table><br><br>

<%= link_to 'Add Answers', new_quiz_answer_path(@quiz.id) %> |
<%= link_to 'Edit', edit_quiz_path(@quiz) %> |
<%= link_to 'Back', quizzes_path %>

<%= render 'timer' %>
