<%= render 'guess' %>

<table class="table">
  <tr class=headings>
    <th>Hint</th>
    <th>Solution</th>
  </tr>
  <% @answers.each do |answer| %>
      <tr class=answers>
        <td class="answer_hint"><%= answer.hint %></td>
        <td class="answer_solution"><%= answer.solution %></td>
        <td></td>
        <td><%= link_to 'Edit Details', [:edit, @quiz, answer] %></td>
        <td><%= link_to 'Remove Answer', [@quiz, answer], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
  </tr>
</table><br><br>

<%= link_to 'Add Answers', new_quiz_answer_path(@quiz.id) %> |
<%= link_to 'Edit', edit_quiz_path(@quiz) %> |
<%= link_to 'Back', quizzes_path %><br><br>

<a id="give_up" href="#">Give up?</a>
