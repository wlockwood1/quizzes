<tbody>
    <tr>
      <td><%= quiz.created_at.to_date.strftime("%B %d, %Y") %></td>
      <td><%= quiz.name %></td>
      <td><%= quiz.category.name %></td>
      <td><%= quiz.games.count %></td>
      <% if quiz.user %>
          <td><%= quiz.user.username %></td>
      <% else %>
          <td>Unregistered user</td>
      <% end %>
      <td><%= link_to 'Play!', quiz %></td>
      <% if user_signed_in? && current_user == quiz.user %>
          <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
          <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
</tbody>