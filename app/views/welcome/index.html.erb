<h1>Welcome to Kwiz</h1>

<h3>Your #1 site for any and all quizzes!</h3>

<%= link_to 'Categories', categories_path %><br>
<%= link_to 'Quizzes', quizzes_path %><br>
<%= link_to 'Play Random Quiz', quiz_path(@quiz) %><br>

<br><br><br>

<% if user_signed_in? %>
    Welcome back <strong><%= current_user.email %>!</strong>.
    <%= link_to 'Edit profile', edit_user_registration_path %> |
    <%= link_to "Logout", destroy_user_session_path, method: :delete %>
    <div>
      <h3>Your Recent Games Played</h3>
      <table class="table table-hover table-condensed">
        <thead>
        <tr>
          <th>Date Played</th>
          <th>Quiz Name</th>
          <th>Score</th>
        </tr>
        </thead>
        <%= render @games %>
      </table>
    </div>
<% else %>
    <%= link_to "Sign up", new_user_registration_path %> |
    <%= link_to "Login", new_user_session_path %>
<% end %>



